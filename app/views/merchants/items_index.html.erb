<%= link_to 'Add Item', "/merchants/#{@merchant.id}/items/new" %>

<% @items.each do |item| %>
  <%= link_to "#{item.name}", "/items/#{item.id}" %>
  <p><%= item.description %></p>
  <p><%= item.price %></p>
  <%= image_tag(item.image) %> 
  <p><%= item.status %></p>
  <p><%= item.inventory %></p>
  <p><%= item.merchant_name %></p>
<% end %>